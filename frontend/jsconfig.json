{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "baseUrl": ".",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vite/client"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.js",
        "src/**/*.vue",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}